#!/usr/bin/python3
import shutil
import subprocess
import sys

import psutil

is_gpu = True if len(sys.argv) > 1 and sys.argv[1] == "gpu" else False

temp = 0
if is_gpu:
    if shutil.which("nvidia-smi") is not None:
        proc = subprocess.run(
            [
                "nvidia-smi",
                "--query-gpu=temperature.gpu",
                "--format=csv,noheader",
            ],
            capture_output=True,
            text=True,
        )
        gpu_temp = proc.stdout.strip()
        try:
            temp = float(gpu_temp)
        except ValueError:
            pass
else:
    try:
        coretemp = psutil.sensors_temperatures()["coretemp"]
        cpu_temp = None
        for t in coretemp:
            if "id 0" in t.label:
                temp = t.current
                break
        else:
            temp = 0
    except KeyError:
        pass

if temp:
    print(f"{round(temp)}Â°C")
else:
    print("N/A")
