#!/usr/bin/python3
import shutil
import subprocess
import sys

import psutil

is_gpu = True if len(sys.argv) > 1 and sys.argv[1] == "gpu" else False

temp: float | int = 0
if is_gpu:
    if shutil.which("nvidia-smi") is not None:
        proc = subprocess.run(
            [
                "nvidia-smi",
                "--query-gpu=temperature.gpu",
                "--format=csv,noheader",
            ],
            capture_output=True,
            text=True,
        )
        gpu_temp = proc.stdout.strip()
        try:
            temp = float(gpu_temp)
        except ValueError:
            pass
else:
    sensor_temps = psutil.sensors_temperatures()
    coretemp = sensor_temps.get("coretemp", sensor_temps.get("it8655"))
    if coretemp is not None:
        cpu_temp = None
        for t in coretemp:
            if "id 0" in t.label:
                temp = t.current
                break
        else:
            if len(coretemp):
                temp = coretemp[0].current
            else:
                temp = 0

if temp:
    print(f"{round(temp)}Â°C")
else:
    print("N/A")
