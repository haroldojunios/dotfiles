# A continuation prompt that displays two filled in arrows
continuation_prompt = "▶▶"

[character]
error_symbol = ""
success_symbol = "[╰─❯](bold green)"

[username]
format = "[╭─$user]($style)"
show_always = true
style_root = "bold green"
style_user = "bold green"

[hostname]
disabled = false
format = "@[$hostname]($style)"
ssh_only = true
style = "bold dimmed green"
trim_at = "-"

{{ if ne .osid "android" -}}
[localip]
disabled = false
ssh_only = true
format = '[\($localipv4\)]($style)'
{{ end -}}

[shlvl]
disabled = true
symbol = '󰧈'

[fill]
symbol = ' '

[shell]
disabled = false
fish_indicator = '󰈺'
powershell_indicator = ''
bash_indicator = ''
zsh_indicator = '%_'

[directory]
format = " in [$path]($style)[$read_only]($read_only_style) "
style = "purple"
truncate_to_repo = true
truncation_length = 3
truncation_symbol = "…/"

[os]
disabled = false

[sudo]
disabled = false
symbol = ''

[git_status]
ahead = "󰁝${count}"
behind = "󰁅${count}"
deleted = "x"
diverged = "󰹹⇡${ahead_count}󰁅${behind_count}"
style = "white"

[cmd_duration]
disabled = false
format = "[$duration]($style)"
min_time = 2500

{{ if ne .osid "android" -}}
[battery]
charging_symbol = "󰂄"
discharging_symbol = "󰂃"
full_symbol = "󱟢"
format = '[$symbol$percentage]($style)'

[[battery.display]]  # "bold red" style when capacity is between 0% and 10%
# disabled = false
style = "bold red"
threshold = 15

[[battery.display]]  # "bold yellow" style when capacity is between 10% and 30%
style = "bold yellow"
threshold = 50

[[battery.display]]  # "bold green" style when capacity is between 10% and 30%
style = "bold green"
threshold = 80
{{ end -}}

[time]
disabled = false
format = " 󰅐 [$time]($style)"
style = "bright-blue"
time_format = "%T"

[memory_usage]
disabled = false
format = '[$symbol ${ram} \(${ram_pct}\)( | ${swap})]($style) '
style = "cyan"
threshold = -1
symbol = "󰍛"

# SYMBOLS
[status]
disabled = false
format = '[╰─❯ \[$symbol$signal_name$common_meaning$maybe_int\]]($style)'
symbol = ""
