{{- if ne .osid "android" -}}
#!/bin/bash
{{- else -}}
#!/data/data/com.termux/files/usr/bin/bash
{{ end }}

set -eu

CRONTAB=$(
  cat <<'EOF'
@reboot fish -c 'fisher update >/dev/null'
{{- if eq .osid "android" }}
0 * * * * find "$HOME/storage/shared/Android/media/com.whatsapp/WhatsApp/Databases/" -type f ! -name msgstore.db.crypt14 -delete >/dev/null 2>&1
{{- end }}
*/10 * * * * "$HOME/.local/bin/get-weather" >"$HOME/.cache/weather" 2>/dev/null
EOF
)

if command -v crontab &>/dev/null; then
  if ! [ "$(crontab -l 2>/dev/null)" = "$CRONTAB" ]; then
    echo "$CRONTAB" | crontab -
  fi
fi
